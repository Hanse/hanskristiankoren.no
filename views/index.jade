extends layout

block content

  section#projects
    h2.center
      a(href='./prosjekter') Prosjekter
    .content.center
      each project in projects
        a(href='#{project.url}')
          img.project(src='/images/projects/#{project.slug}.small.png')

  section#contact
    h2.center
      a(href='./kontakt') Kontakt
    .content.center
      #form-message
      form(action='/' method='post')
        div
          input#name(type='text' name='name' placeholder='Navn')
          input#email(type='email' name='email' placeholder='E-post')
          input#csrf(type='hidden' name='_csrf' value='#{token}')
          textarea#body(name='body')
          button(type='submit') Send e-post!
